            text: "Register"
            on_release:
                root.manager.transition.direction = "left"
                app.root.current = "register"
                
<RegisterUserWindow>:
    name: "register"
    full_name: full_name
    email: email
    password: password

    FloatLayout:
        cols:1

        FloatLayout:
            size: root.width, root.height/2

            Label:
                text: "Create an Account"
                size_hint: 0.8, 0.2
                pos_hint: {"x":0.1, "top":1}
                font_size: (root.width**2 + root.height**2) / 14**4

            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8}
                text: "Full name: "
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                pos_hint: {"x":0.5, "top":0.8}
                size_hint: 0.4, 0.12
                id: full_name
                multiline: False
                font_size: (root.width**2 + root.height**2) / 14**4

            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8-0.13}
                text: "Email: "
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                pos_hint: {"x":0.5, "top":0.8-0.13}
                size_hint: 0.4, 0.12
                id: email
                email: True
                multiline: False
                font_size: (root.width**2 + root.height**2) / 14**4

            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8-0.13*2}
                text: "Password: "
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                pos_hint: {"x":0.5, "top":0.8-0.13*2}
                size_hint: 0.4, 0.12
                id: password
                multiline: False
                password: True
                font_size: (root.width**2 + root.height**2) / 14**4
        
        Button:
            pos_hint:{"x":0.3,"y":0.2}
            size_hint: 0.4, 0.15
            font_size: (root.width**2 + root.height**2) / 13**4
            text: "Register"
            on_release:
                root.manager.transition.direction = "up"
                root.register()

        Button:
            pos_hint:{"x":0.35,"y":0.05}
            size_hint: 0.3, 0.1
            font_size: (root.width**2 + root.height**2) / 19**4
            text: "Already have an account? Log in!"
            on_release:
                root.manager.transition.direction = "left"
                root.login()
        


