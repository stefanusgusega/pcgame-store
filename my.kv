<PurchaseWindow>:
    name: "purchase"
    balance: balance
    price: price

    FloatLayout:
        Label:
            text: "Buy <NAMA GAME> Confirmation"
            size_hint: 0.8, 0.2
            pos_hint: {"x":0.1, "top":0.8}
            font_size: (root.width**2 + root.height**2) / 16**4
        Label:
            text: "Please make sure your e-wallet balance is enough"
            valign: 'middle'
