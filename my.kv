            font_size: (root.width**2 + root.height**2) / 18**4
        
        Label:
            id: balance
            pos_hint:{"x": 0.5, "top":0.55}
            valign: 'middle'
            size_hint:0.1, 0.1
            # text: "tes1"
            font_size: (root.width**2 + root.height**2) / 18**4

        Label:
            pos_hint:{"x": 0.25, "top":0.5}
            valign: 'middle'
            size_hint:0.1, 0.1
            text: "Price: "
            font_size: (root.width**2 + root.height**2) / 18**4
        Label:
            id: price
            pos_hint:{"x": 0.5, "top":0.5}
            valign: 'middle'
            size_hint:0.1, 0.1
            # text: "tes2"
            font_size: (root.width**2 + root.height**2) / 18**4

        Button:
            pos_hint:{"x":0.3, "y": 0.25}
            size_hint:0.15,0.075
            text: "Cancel"
            on_release:
                app.root.current = "main_page"
                root.manager.transition.direction = "right"
        Button:
            pos_hint:{"x":0.5, "y": 0.25}
            size_hint:0.15,0.075
            text: "Buy Game"
