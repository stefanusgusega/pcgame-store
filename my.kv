        Label:
            text:"Please login/register"
            halign: 'center'
            font_size: (root.width**2 + root.height**2) / 19**4
            pos_hint: {"x":0.3, "top":0.4}
            size_hint: 0.4, None

        Button:
            pos_hint:{"x":0.3,"y":0.25}
            size_hint: 0.2, 0.075
