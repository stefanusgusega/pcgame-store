<RegisterUserWindow>:
    name: "register"
    full_name: full_name
    email: email
    password: password

    FloatLayout:
        cols:1

        FloatLayout:
            size: root.width, root.height/2

            Label:
                text: "Create an Account"
                size_hint: 0.8, 0.2
                pos_hint: {"x":0.1, "top":1}
                font_size: (root.width**2 + root.height**2) / 14**4

            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8}
                text: "Full name: "
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                pos_hint: {"x":0.5, "top":0.8}
                size_hint: 0.4, 0.12
                id: full_name
                multiline: False
                font_size: (root.width**2 + root.height**2) / 14**4

            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8-0.13}
                text: "Email: "
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                pos_hint: {"x":0.5, "top":0.8-0.13}
                size_hint: 0.4, 0.12
                id: email
                email: True
                multiline: False
                font_size: (root.width**2 + root.height**2) / 14**4

            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8-0.13*2}
                text: "Password: "
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                pos_hint: {"x":0.5, "top":0.8-0.13*2}
                size_hint: 0.4, 0.12
                id: password
                multiline: False
                password: True
                font_size: (root.width**2 + root.height**2) / 14**4
        
        Button:
            pos_hint:{"x":0.3,"y":0.2}
            size_hint: 0.4, 0.15
            font_size: (root.width**2 + root.height**2) / 13**4
            text: "Register"
            on_release:
                root.manager.transition.direction = "up"
                root.register()

        Button:
            pos_hint:{"x":0.35,"y":0.05}
            size_hint: 0.3, 0.1
            font_size: (root.width**2 + root.height**2) / 19**4
            text: "Don't have an Account? Create One"
            on_release:
                root.manager.transition.direction = "left"
                root.login()


<LoginUserWindow>:
    name: "login"
    email: email
    password: password

    FloatLayout:

        Label:
            text: "Login"
            size_hint: 0.8, 0.2
            pos_hint: {"x":0.1, "top":1}
            font_size: (root.width**2 + root.height**2) / 14**4

        Label:
            text:"Email: "
            font_size: (root.width**2 + root.height**2) / 15**4
            pos_hint: {"x":0.1, "top":0.8}
            size_hint: 0.35, 0.15

        TextInput:
            id: email
            multiline: False
            email: True
            font_size: (root.width**2 + root.height**2) / 15**4
            pos_hint: {"x": 0.45 , "top":0.8}
            size_hint: 0.4, 0.1

        Label:
            text:"Password: "
            font_size: (root.width**2 + root.height**2) / 15**4
            pos_hint: {"x":0.1, "top":0.7}
            size_hint: 0.35, 0.15

        TextInput:
            id: password
            multiline: False
            password: True
            font_size: (root.width**2 + root.height**2) / 15**4
            pos_hint: {"x": 0.45, "top":0.7}
            size_hint: 0.4, 0.1

        Button:
            pos_hint:{"x":0.3,"y":0.2}
            size_hint: 0.4, 0.2
            font_size: (root.width**2 + root.height**2) / 13**4
            text: "Login"
            on_release:
                root.manager.transition.direction = "up"
                root.login()

        Button:
            pos_hint:{"x":0.35,"y":0.05}
            size_hint: 0.3, 0.1
            font_size: (root.width**2 + root.height**2) / 19**4
            text: "Don't have an Account? Create One"
            on_release:
                root.manager.transition.direction = "right"
                root.register()


<MainWindow>:
    name: "main"
    full_name: full_name
    email: email
    created:created

    FloatLayout:
        Label:
            id: full_name
            pos_hint:{"x": 0.1, "top":0.9}
            size_hint:0.8, 0.2
            text: "Account Name: "

        Label:
            id: email
            pos_hint:{"x": 0.1, "top":0.7}
            size_hint:0.8, 0.2
            text: "Email: "

        Label:
            id: created
            pos_hint:{"x": 0.1, "top":0.5}
            size_hint:0.8, 0.2
            text: "Created: "

        Button:
            pos_hint:{"x":0.2, "y": 0.1}
            size_hint:0.6,0.2
            text: "Log Out"
            on_release:
                app.root.current = "login"
                root.manager.transition.direction = "down"
        
        Button:
            pos_hint:{"x":0.2, "y": 0.05}
            size_hint:0.6,0.04
            text: "Purchase (Inka)"
            on_release:
                app.root.current = "purchase"
                root.manager.transition.direction = "left"

<PurchaseWindow>:
    name: "purchase"
    balance: balance
    price: price

    FloatLayout:
        Label:
            text: "Buy <NAMA GAME> Confirmation"
            size_hint: 0.8, 0.2
            pos_hint: {"x":0.1, "top":0.8}
            font_size: (root.width**2 + root.height**2) / 16**4
        Label:
            text: "Please make sure your e-wallet balance is enough"
            valign: 'middle'
            size_hint: 0.8,0.2
            pos_hint: {"x":0.1, "top":0.7}
            font_size: (root.width**2 + root.height**2) / 20**4

        Label:
            pos_hint:{"x": 0.25, "top":0.55}
            valign: 'middle'
            size_hint:0.1, 0.1
            text: "E-wallet balance: "
            font_size: (root.width**2 + root.height**2) / 18**4
        
        Label:
            id: balance
            pos_hint:{"x": 0.5, "top":0.55}
            valign: 'middle'
            size_hint:0.1, 0.1
            # text: "tes1"
            font_size: (root.width**2 + root.height**2) / 18**4

        Label:
            pos_hint:{"x": 0.25, "top":0.5}
            valign: 'middle'
            size_hint:0.1, 0.1
            text: "Price: "
            font_size: (root.width**2 + root.height**2) / 18**4
        Label:
            id: price
            pos_hint:{"x": 0.5, "top":0.5}
            valign: 'middle'
            size_hint:0.1, 0.1
            # text: "tes2"
            font_size: (root.width**2 + root.height**2) / 18**4

        Button:
            pos_hint:{"x":0.3, "y": 0.25}
            size_hint:0.15,0.075
            text: "Cancel"
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "right"
        Button:
            pos_hint:{"x":0.5, "y": 0.25}
            size_hint:0.15,0.075
            text: "Buy Game"
            on_release:
                root.purchase()
                #app.root.current = "main"
                root.manager.transition.direction = "left"

<DownloadWindow>:
    name: "download"

    FloatLayout:
        Label:
            text: "Purchase Success!"
            valign: 'middle'
            size_hint: 0.8, 0.2
            pos_hint: {"x":0.1, "top":0.8}
            font_size: (root.width**2 + root.height**2) / 16**4
        Label:
            text: "Click button below to get the link to download the game"
            valign: 'middle'
            size_hint: 0.8,0.2
            pos_hint: {"x":0.1, "top":0.7}
            font_size: (root.width**2 + root.height**2) / 19**4

        Button:
            pos_hint:{"x":0.4, "top": 0.5}
            size_hint:0.175,0.075
            text: "Download Game"
            on_release:
                root.download()

        Button:
            pos_hint:{"x":0.475, "top": 0.4}
            size_hint:0.1,0.05
            text: "Back to Home"
            font_size: 20
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "left"